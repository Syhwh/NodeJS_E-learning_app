<h2>{{class.title}}'s Classes </h2>
<table  class="table " cellspacing="0" cellpadding="0">
        <thead class="thead-dark">
            <tr>
                <th>Lesson Number</th>
                <th>Lesson Title</th>
                <th></th>
                
            </tr>
        </thead>
        <tbody>
            {{#each class.lessons}}
            <tr>
                <td>{{lesson_number}} </td>
                <td>{{lesson_title}} </td>
                <td><a href="/classes/{{../class._id}}/lessons/ {{lesson_number}} "> View Lessons</a>   </td>
                </tr>
            {{/each}}
        </tbody>
    </table>