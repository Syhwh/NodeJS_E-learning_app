
<h2> {{student.first_name}}'s classes </h2>

    <table  class="table " cellspacing="0" cellpadding="0">
        <thead class="thead-dark">
            <tr>
                <th>Class Id</th>
                <th>Class Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each student.classes}}
            <tr>
                <td>{{class_id}} </td>
                <td>{{class_title}} </td>
                <td><a href="/classes/{{class_id}}/lessons"> View Lessons</a>   </td>
            </tr>
            {{/each}}
        </tbody>
    </table>